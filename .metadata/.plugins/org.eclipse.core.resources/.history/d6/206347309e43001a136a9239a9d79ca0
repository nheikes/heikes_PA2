package heikes_p1;

import java.util.ArrayList;

public class Decrypter 
{
	public static void decrypt(String numIn)
	{
		ArrayList<Integer> digits = new ArrayList<Integer>();
		for (int i = 0; i < numIn.length(); i++)
		{
			digits.add(Character.getNumericValue(numIn.charAt(i)));
		}
		
		int hold;
		int i = 0;
		while (i < digits.size() - 2) 
		{
			hold = digits.get(i);
			digits.set(i, digits.get(i + 2));
			digits.set(i + 2, hold);
			
			// 0 and 1 are good
			// 2 and 3 are bad
			// 4 and 5 are good...
			if (i % 2 == 0)
			{
				i++;
			}
			else
			{
				i += 3;
			}
			
		}
		// 0 + 7 % 10 = 7
		// 3 + 7 % 10 = 0
		// 9 + 7 % 10 = 6
		for (i = 0; i < digits.size(); i++) 
		{
			digits.set(i, (7 - digits.get(i)) % 10);
		}
		
		// Print
		for (Integer num : digits) 
		{
			System.out.print(num);
		}
		System.out.println();
	}

}
